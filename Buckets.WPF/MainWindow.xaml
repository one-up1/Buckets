<Window x:Class="Buckets.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buckets.WPF"
        mc:Ignorable="d"
        Width="800"
        Height="450"
        Title="MainWindow">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="148" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Capacity: " />

            <TextBox
                Name="tbBucketCapacity"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Top"
                Margin="5"
                Text="12" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Content: " />

            <TextBox
                Name="tbBucketContent"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Margin="5" />

            <Button
                Name="bCreateBucket"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"
                Content="Create bucket"
                Click="bCreateBucket_Click" />

        </Grid>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="42" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="148" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Margin="5">

                <RadioButton
                    Name="rbRainBarrelDefault"
                    Content="Default"
                    IsChecked="true" />

                <RadioButton
                    Name="rbRainBarrelSmall"
                    Content="Small" />

                <RadioButton
                    Name="rbRainBarrelLarge"
                    Content="Large" />
                
            </StackPanel>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Content: " />

            <TextBox
                Name="tbRainBarrelContent"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Margin="5" />

            <Button
                Name="bCreateRainBarrel"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"
                Content="Create rain barrel"
                Click="bCreateRainBarrel_Click" />

        </Grid>

        <Grid Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="84" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="148" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Content: " />

            <TextBox
                Name="tbOilBarrelContent"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="top"
                Margin="5" />

            <Button
                Name="bCreateOilBarrel"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="5"
                Content="Create oil barrel"
                Click="bCreateOilBarrel_Click" />

        </Grid>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="5">

            <Label
                Name="lDescription"
                Margin="5"
                FontWeight="Bold" />

            <Label
                Name="lContent"
                Margin="5"
                FontWeight="Bold" />

        </StackPanel>

    </Grid>
</Window>
